@model WorldTravelBlog.Models.Experience

@{
    ViewData["Title"] = "Experience - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<hr />

<html>
  <head>
    <title>World Travel Blog - Edit</title>
  </head>
  <body>
    <h2>Edit Experience</h2>
    <hr />
    <h4>Edit this experience: @Html.DisplayFor(model => model.Name)
                              @Html.DisplayFor(model => model.Description)</h4>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.ExperienceId)

        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name)

        @Html.LabelFor(model => model.Description)
        @Html.EditorFor(model => model.Description)

		@Html.LabelFor(model => model.LocationId)
        @Html.DropDownList("LocationId")

        <input type="submit" value="Save" class="btn btn-default" />
    }
    <p>@Html.ActionLink("Back to list", "Index")</p>

  </body>
</html>